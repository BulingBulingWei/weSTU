/* pages/about/about.wxss */
page{
  display: flex;
  padding: 10px;
  width: calc(100% - 20px);
  height: 100%;
  font-size: 14px;
}

.title{
  font-size: 18px;
  padding: 10px;
  border-bottom: 1px solid #eee;
  margin-bottom: 10px;
  
}

.aboutCon{
  width: calc(100% - 10px);
  padding: 5px;
  border: 1px solid #eee;
  border-radius: 3px;
  margin: 30px 0;
  
}

.infoCon{
  display: flex;
  flex-wrap: wrap;
  line-height: 30px;
  word-break: break-all;  
  overflow: hidden;
  padding: 10px 0px;
  border-bottom: 1px solid #eee;
}

.copy{
  margin-left: 10px;
  color:  #79B2F9;
}

.card{
  font-size: 14px;
  display: flex;
  border-bottom:1px solid #eee;
  padding: 15px 10px;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.123);
  margin-bottom: 10px;
}
